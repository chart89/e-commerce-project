// This is your Prisma schema file,

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Car {
  id String @id @default(uuid())
  mark String
  model String
  scale String
  price Int
  description String
  picture String
}

model Order {
  id String @id @default(uuid())
  product String
  name String
  address String
  email String
  phone String
  user User @relation(fields: [userId], references: [id])
  userId String
  createdAt DateTime @default(now())
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password Password?
  orders    Order[]
}

model Password {
  id       String @id @default(uuid())
  hashedPassword String
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String @unique
}

